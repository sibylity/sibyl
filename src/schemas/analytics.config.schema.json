{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$", "default": "1.0" },
    "generates": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "events": { "type": "string" },
          "groups": { 
            "type": "array",
            "items": { "type": "string" }
          },
          "output": { "type": "string" },
          "disableComments": { "type": "boolean", "default": false }
        },
        "required": ["events", "groups", "output"]
      }
    }
  },
  "required": ["generates", "version"]
} 